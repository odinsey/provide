{% extends 'CmsAdminBundle::base.html.twig' %}
{% trans_default_domain "CmsAdminBundle" %}
{% block title %}{{ parent() }} - {{ 'layout.login'|trans({}, 'FOSUserBundle') }}{% endblock %}
{% block stylesheets %}
{{ parent() }}
<style type="text/css">
	body {
	  padding-top: 40px;
	  padding-bottom: 40px;
	  background-color: #f5f5f5;
	}
	h1 { text-align: center; }
	.form-signin {
	  max-width: 500px;
	  padding: 19px 29px 29px;
	  margin: 0 auto 20px;
	  background-color: #fff;
	  border: 1px solid #e5e5e5;
	  -webkit-border-radius: 5px;
		 -moz-border-radius: 5px;
			  border-radius: 5px;
	  -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
		 -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
			  box-shadow: 0 1px 2px rgba(0,0,0,.05);
	}
</style>
{% endblock %}
{% block body %}
    {% block fos_user_content %}
	<div class="container">
                <h1>{{ 'global.title'|trans({}, 'CmsAdminBundle') }}</h1>
		{% if error %}
		<div class="alert alert-error">{{ error|trans({}, 'FOSUserBundle') }}</div>
		{% endif %}
		<form class="form-signin form-horizontal text-center" action="{{ path("fos_user_security_check") }}" method="POST">
			<h2 class="center">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</h2>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
			<div class="control-group">
				<label class="control-label" for="username">{{ 'login.label.username'|trans }}</label>
				<div class="controls">
					<input type="text" class="span4" id="username" name="_username" value="{{ last_username }}" />
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="password">{{ 'login.label.password'|trans }}</label>
				<div class="controls">
					<input type="password" class="span4" id="password" name="_password" />
				</div>
			</div>
			<div class="control-group">
				<label class="control-label" for="remember_me">{{ 'login.label.remember_me'|trans }}</label>
				<div class="controls">
					<input type="checkbox" id="remember_me" name="_remember_me" value="on" />
				</div>
			</div>
			<input type="submit" class="btn btn-large btn-primary" value="{{ 'login.label.submit'|trans }}" >
			<a class="btn btn-large btn-secondary" href="{{ path("fos_user_resetting_request") }}" >{{ 'login.forgotten_password'|trans({}, 'CmsAdminBundle') }}</a>
		</form>
	</div>
    {% endblock fos_user_content %}
{% endblock body %}