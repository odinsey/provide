{% trans_default_domain "CmsAdminBundle" %}
{% extends 'CmsAdminBundle::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
	{% stylesheets filter='cssrewrite'
		'@NPAdminBundle/Resources/public/css/collections.css'
	%}
	<link rel="stylesheet" href="{{ asset_url }}" />
	{% endstylesheets %}
{% endblock %}

{% block javascripts_foot %}
        {{ parent() }}
        {% javascripts
                '@CmsAdminBundle/Resources/public/js/collections.js'
        %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
{% endblock %}

{% block body %}
<div id="ajax-on-loading">
    <span class="ajax loading">{{ 'global.ajax.loading'|trans }}</span>
    <span class="ajax error">{{ 'global.ajax.error'|trans }}</span>
    <span class="ajax success">{{ 'global.ajax.success'|trans }}</span>
</div>

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
        <nav class="container-fluid">
            <a href="{{ path('cms_admin_dashboard') }}" title="{{ 'global.goto_dashboard'|trans }}" class="brand">{{ 'global.title'|trans }}</a>
            <nav class="nav-collapse collapse">
                <nav class="navbar-text pull-right">
	{% block menutopright %}
			{{ 'layout.logged_in_as'|trans({'%username%': ''}, 'FOSUserBundle') }}
                        <a href="{{ path('fos_user_profile_edit') }}">{{ app.user.username }}</a>
                        |
                        <a href="{{ path('fos_user_security_logout') }}">{{ 'global.logout'|trans }}</a>
	{% endblock %}
                    </nav>
                    <ul class="nav">
	{% block menutopleft %}
		{% include 'NPAdminBundle::menutopleft.html.twig' %}
	{% endblock %}
                        </ul>
                    </nav>
                </nav>
            </div>
        </div>

	{% block container %}
        <div class="container-fluid">
            <div class="row-fluid">

                <div class="span2">
		{% block menuleft %}
		{% endblock %}
                    </div>

                    <div class="span10">

		{% block flashes %}
					{% for flashMessage in app.session.flashbag.get('notice') %}
                        <div class="alert">
                            <a class="close" data-dismiss="alert">×</a>
						{{ flashMessage }}
                        </div>
					{% endfor %}
					{% for flashMessage in app.session.flashbag.get('error') %}
                        <div class="alert alert-error">
                            <a class="close" data-dismiss="alert">×</a>
						{{ flashMessage }}
                        </div>
					{% endfor %}
					{% for flashMessage in app.session.flashbag.get('success') %}
                        <div class="alert alert-success">
                            <a class="close" data-dismiss="alert">×</a>
						{{ flashMessage }}
                        </div>
					{% endfor %}
					{% for flashMessage in app.session.flashbag.get('info') %}
                        <div class="alert alert-info">
                            <a class="close" data-dismiss="alert">×</a>
						{{ flashMessage }}
                        </div>
					{% endfor %}
		{% endblock %}

		{% block content %}{% endblock %}
                    </div>
                </div>
            </div>
	{% endblock %}
            <hr />
            <footer class="container-fluid">
	{% block footer %}
                    <p><a href="http://www.atelier-45.fr/" target="_blank">{{ 'global.copyright'|trans }}</a></p>
	{% endblock %}
                </footer>
{% endblock %}